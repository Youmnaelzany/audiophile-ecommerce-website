---
import "@/styles/globals.css";
---

<!-- Start Of Header -->
<header
  class="flex justify-between items-center bg-[#0E0E0E] text-[#FFFFFF] py-[2.31rem] px-[10.31rem]"
>
  <!-- Logo -->
  <div class="">
    <img src="/images/shared/desktop/logo.svg" alt="logo" class="" />
  </div>
  <!-- Nav Bar -->
  <nav class="">
    <ul
      class="flex justify-between items-center gap-[2.12rem] text-[0.8125rem] font-bold uppercase leading-[1.5625rem] tracking-[0.125rem]"
    >
      <li
        class="hover:text-[#D87D4A] transition-all ease-in-out duration-[0.5s]"
      >
        <a href="/" class="">Home</a>
      </li>
      <li
        class="hover:text-[#D87D4A] transition-all ease-in-out duration-[0.5s]"
      >
        <a href="/headphones" class="">Headphones</a>
      </li>
      <li
        class="hover:text-[#D87D4A] transition-all ease-in-out duration-[0.5s]"
      >
        <a href="/speakers" class="">Speakers</a>
      </li>
      <li
        class="hover:text-[#D87D4A] transition-all ease-in-out duration-[0.5s]"
      >
        <a href="/earphones" class="">Earphones</a>
      </li>
    </ul>
  </nav>
  <!-- Cart -->
  <div class="">
    <a href="/checkout" class="">
      <img src="/images/shared/desktop/icon-cart.svg" alt="" class="" />
    </a>
  </div>
