---
import Layout from "../layouts/Layout.astro";
import "@/styles/globals.css";
import Header from "../components/Header.astro";
import Footer from "@/components/Footer.astro";
---

<Layout title="Frontend Mentor | Audiophile e-commerce website">
  <!-- Header -->
  <Header />
  <main>
    <!-- Website Home Detailes -->
    <section
      class="home-details text-[#fff] pl-[10.31rem] pt-24 pb-[9.59rem] flex flex-col gap-4"
    >
      <h1 class="text-sm font-normal leading-normal tracking-[0.625rem]">
        NEW PRODUCT
      </h1>
      <h2
        class="w-[24.75rem] text-[3.5rem] font-bold leading-[3.625rem] tracking-[0.125rem] uppercase mt-2"
      >
        XX99 Mark II Headphones
      </h2>
      <p
        class="w-[21.8125rem] opacity-75 text-[0.9375rem] leading-[1.5625rem] font-normal"
      >
        Experience natural, lifelike audio and exceptional build quality made
        for the passionate music enthusiast.
      </p>
      <a
        href="/product-xx99-mark-one-headphones"
        target="_blank"
        class="w-40 h-12 bg-[#D87D4A] text-sm font-bold leading-normal tracking-[0.0625rem] uppercase flex justify-center items-center mt-6"
        >See Product</a
      >
    </section>
    <!-- Shop Other Product -->
    <section
      class="mx-[10.31rem] mb-40 flex justify-between items-center gap-[1.78rem] mt-[7.5rem]"
    >
      <!-- Headphones Category -->
      <div class="flex flex-col items-center gap-[2.25rem] relative">
        <!-- Product Image -->
        <div class="z-10">
          <img
            src="/images/shared/desktop/image-category-thumbnail-headphones.png"
            alt="image-category-thumbnail-headphones"
            class=""
          />
        </div>
        <!-- Shop -->
        <div
          class="bg-[#F1F1F1] w-[21.875rem] h-[12.75rem] flex flex-col justify-center items-center gap-[0.94rem] rounded-lg absolute bottom-[-2.7rem] pt-[2.25rem]"
        >
          <h2
            class="text-[#000] text-lg font-bold leading-normal tracking-[0.08038rem] uppercase"
          >
            HEADPHONES
          </h2>
          <div class="flex justify-between items-center gap-[0.83ream]">
            <a
              href="/headphones"
              target="_blank"
              class="text-[#000] opacity-50 text-sm font-bold leading-normal tracking-[0.0625rem] uppercase pr-4"
              >Shop</a
            >
            <img
              src="/images/shared/desktop/icon-arrow-right.svg"
              alt="icon-arrow-right"
              class=""
            />
          </div>
        </div>
      </div>
      <!-- Speaker Category -->
      <div class="flex flex-col items-center gap-[2.25rem] relative">
        <!-- Product Image -->
        <div class="z-10">
          <img
            src="/images/shared/desktop/image-category-thumbnail-speakers.png"
            alt="image-category-thumbnail-speakers"
            class=""
          />
        </div>
        <!-- Shop -->
        <div
          class="w-[21.875rem] h-[12.75rem] bg-[#F1F1F1] rounded-lg flex flex-col justify-center items-center absolute bottom-[-3rem] pt-[2.25rem] gap-[0.94rem]"
        >
          <h2
            class="text-[#000] text-lg font-bold leading-normal tracking-[0.08038rem] uppercase"
          >
            SPEAKERS
          </h2>
          <div class="flex justify-between items-center gap-[0.83ream]">
            <a
              href="/speakers"
              target="_blank"
              class="text-[#000] opacity-50 text-sm font-bold leading-normal tracking-[0.0625rem] uppercase pr-4"
              >Shop</a
            >
            <img
              src="/images/shared/desktop/icon-arrow-right.svg"
              alt="icon-arrow-right"
              class=""
            />
          </div>
        </div>
      </div>
      <!-- EarPhones Category -->
      <div class="flex flex-col items-center gap-[2.25rem] relative">
        <!-- Product Image -->
        <div class="z-10">
          <img
            src="/images/shared/desktop/image-category-thumbnail-earphones.png"
            alt="image-category-thumbnail-earphones.png"
            class=""
          />
        </div>
        <!-- Shop -->
        <div
          class="w-[21.875rem] h-[12.75rem] bg-[#F1F1F1] rounded-lg flex flex-col justify-center items-center gap-[0.94rem] absolute bottom-[-3.6rem] pt-[2.25rem]"
        >
          <h2
            class="text-[#000] text-lg font-bold leading-normal tracking-[0.08038rem] uppercase"
          >
            EARPHONES
          </h2>
          <div class="flex justify-between items-center gap-[0.83ream]">
            <a
              href="/earphones"
              target="_blank"
              class="text-[#000] opacity-50 text-sm font-bold leading-normal tracking-[0.0625rem] uppercase pr-4"
              >Shop</a
            >
            <img
              src="/images/shared/desktop/icon-arrow-right.svg"
              alt="icon-arrow-right"
              class=""
            />
          </div>
        </div>
      </div>
    </section>
    <!-- ZX9 SPEAKER -->
    <section
      class="w-[69.375rem] h-[35rem] bg-[#D87D4A] rounded-lg mx-[10.31rem]"
    >
    </section>
  </main>
  <!-- Footer -->
  <Footer />
</Layout>
7
