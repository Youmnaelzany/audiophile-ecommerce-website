---
import Layout from "../layouts/Layout.astro";
import "@/styles/globals.css";
import Header from "../components/Header.astro";
import Footer from "@/components/Footer.astro";
---

<Layout title="Frontend Mentor | Audiophile e-commerce website">
  <Header />
  <main>
    <!-- Page Content Of HEADPHONES -->
    <section
      class="bg-[#0E0E0E] text-[#fff] text-[2.5rem] font-bold leading-[2.75rem] tracking-[0.08931rem] uppercase flex justify-center items-center py-[6.6rem]"
    >
      <h1 class="">Headphones</h1>
    </section>
    <!-- First Product Of Headphones -->
    <section
      class="mx-[10.31rem] my-40 flex justify-between items-center gap-[7.81rem]"
    >
      <!-- Image Of The Product -->
      <div class="w-[33.75rem]">
        <img
          src="/images/product-xx99-mark-two-headphones/desktop/image-product.jpg"
          alt=""
          class=""
        />
      </div>
      <!-- Detailes Of The Product -->
      <div class="flex flex-col gap-4">
        <h2
          class="text-[#D87D4A] text-sm font-normal leading-normal tracking-[0.625rem] uppercase"
        >
          NEW PRODUCT
        </h2>
        <h2
          class="w-[27.8125rem] text-[#000] text-[2.5rem] font-bold leading-[2.75rem] tracking-[0.08931rem] uppercase"
        >
          XX99 Mark II Headphones
        </h2>
        <p
          class="w-[27.8125rem] text-[#000] opacity-50 text-[0.9375rem] font-normal leading-[1.5625rem] mt-4"
        >
          The new XX99 Mark II headphones is the pinnacle of pristine audio. It
          redefines your premium headphone experience by reproducing the
          balanced depth and precision of studio-quality sound.
        </p>
        <a
          href="/product-xx99-mark-two-headphones.html"
          class="flex justify-center items-center mt-6 w-40 h-12 bg-[#D87D4A] text-[#fff] text-[0.8125rem] font-bold leading-normal tracking-[0.0625rem] uppercase"
          >See Product</a
        >
      </div>
    </section>
    <!-- Second Product Of Headphones -->
    <section
      class="mb-40 mx-[10.31rem] flex justify-between items-center gap-[7.81rem]"
    >
      <!-- Detailes Of The Product -->
      <div class="flex flex-col gap-4">
        <h2
          class="w-[27.8125rem] text-[#000] text-[2.5rem] font-bold leading-[2.75rem] tracking-[0.08931rem] uppercase"
        >
          XX99 Mark I Headphones
        </h2>
        <p
          class="w-[27.8125rem] text-[#000] opacity-50 text-[0.9375rem] font-normal leading-[1.5625rem] mt-4"
        >
          As the gold standard for headphones, the classic XX99 Mark I offers
          detailed and accurate audio reproduction for audiophiles, mixing
          engineers, and music aficionados alike in studios and on the go.
        </p>
        <a
          href="/product-xx99-mark-one-headphones.html"
          class="flex justify-center items-center mt-6 w-40 h-12 bg-[#D87D4A] text-[#fff] text-[0.8125rem] font-bold leading-normal tracking-[0.0625rem] uppercase"
          >See Product</a
        >
      </div>
      <!-- Image Of The Product -->
      <div class="w-[33.75rem]">
        <img
          src="/images/product-xx99-mark-one-headphones/desktop/image-product.jpg"
          alt=""
          class=""
        />
      </div>
    </section>
    <!-- Third Product Of Headphones -->
    <section
      class="mx-[10.31rem] mb-40 flex justify-between items-center gap-[7.81rem]"
    >
      <!-- Image Of The Product -->
      <div class="w-[33.75rem]">
        <img
          src="/images/product-xx59-headphones/desktop/image-product.jpg"
          alt=""
          class=""
        />
      </div>
      <!-- Detailes Of The Product -->
      <div class="flex flex-col gap-4">
        <h2
          class="w-[27.8125rem] text-[#000] text-[2.5rem] font-bold leading-[2.75rem] tracking-[0.08931rem] uppercase"
        >
          XX59 Headphones
        </h2>
        <p
          class="w-[27.8125rem] text-[#000] opacity-50 text-[0.9375rem] font-normal leading-[1.5625rem] mt-4"
        >
          Enjoy your audio almost anywhere and customize it to your specific
          tastes with the XX59 headphones. The stylish yet durable versatile
          wireless headset is a brilliant companion at home or on the move.
        </p>
        <a
          href="/product-xx59-headphones"
          class="flex justify-center items-center mt-6 w-40 h-12 bg-[#D87D4A] text-[#fff] text-[0.8125rem] font-bold leading-normal tracking-[0.0625rem] uppercase"
          >See Product</a
        >
      </div>
    </section>
    <!-- Shop Other Product -->
    <section
      class="mx-[10.31rem] mb-40 flex justify-between items-center gap-[1.78rem]"
    >
      <!-- Headphones Category -->
      <div class="flex flex-col items-center gap-[2.25rem] relative">
        <!-- Product Image -->
        <div class="z-10">
          <img
            src="/images/shared/desktop/image-category-thumbnail-headphones.png"
            alt=""
          />
        </div>
        <!-- Shop -->
        <div
          class="bg-[#F1F1F1] w-[21.875rem] h-[12.75rem] flex flex-col justify-center items-center gap-[0.94rem] rounded-lg absolute bottom-[-3rem] pt-[2.25rem]"
        >
          <h2
            class="text-[#000] text-lg font-bold leading-normal tracking-[0.08038rem]"
          >
            HEADPHONES
          </h2>
          <div class="flex justify-between items-center gap-[0.83ream]">
            <a
              href="/headphones"
              class="text-[#000] opacity-50 text-sm font-bold leading-normal tracking-[0.0625rem] uppercase inline-block"
              >Shop</a
            >
            <img
              src="/images/shared/desktop/icon-arrow-right.svg"
              alt=""
              class="inline-block"
            />
          </div>
        </div>
      </div>
      <!-- Speakers Category -->
      <div class="flex flex-col items-center gap-[2.25rem] relative">
        <!-- Product Image -->
        <div class="z-10">
          <img src="/images/shared/desktop/" alt="" />
        </div>
        <!-- Shop -->
        <div
          class="bg-[#F1F1F1] w-[21.875rem] h-[12.75rem] flex flex-col justify-center items-center gap-[0.94rem] rounded-lg absolute bottom-[-3rem] pt-[2.25rem]"
        >
          <h2
            class="text-[#000] text-lg font-bold leading-normal tracking-[0.08038rem]"
          >
            HEADPHONES
          </h2>
          <div class="flex justify-between items-center gap-[0.83ream]">
            <a
              href="/headphones"
              class="text-[#000] opacity-50 text-sm font-bold leading-normal tracking-[0.0625rem] uppercase inline-block"
              >Shop</a
            >
            <img
              src="/images/shared/desktop/icon-arrow-right.svg"
              alt=""
              class="inline-block"
            />
          </div>
        </div>
      </div>

      <!-- Earphones Category -->
      <div class="flex flex-col items-center gap-[2.25rem] relative">
        <!-- Product Image -->
        <div class="z-10">
          <img src="/images/shared/desktop/" alt="" />
        </div>
        <!-- Shop -->
        <div
          class="bg-[#F1F1F1] w-[21.875rem] h-[12.75rem] flex flex-col justify-center items-center gap-[0.94rem] rounded-lg absolute bottom-[-3rem] pt-[2.25rem]"
        >
          <h2
            class="text-[#000] text-lg font-bold leading-normal tracking-[0.08038rem]"
          >
            HEADPHONES
          </h2>
          <div class="flex justify-between items-center gap-[0.83ream]">
            <a
              href="/headphones"
              class="text-[#000] opacity-50 text-sm font-bold leading-normal tracking-[0.0625rem] uppercase inline-block"
              >Shop</a
            >
            <img
              src="/images/shared/desktop/icon-arrow-right.svg"
              alt=""
              class="inline-block"
            />
          </div>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>
